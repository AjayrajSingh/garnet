import("//build/package.gni")

executable("bin") {
  output_name = "httpget_cpp"

  sources = [
    "httpget.cc",
  ]

  deps = [
    "//garnet/public/lib/fsl",
    "//sdk/fidl/fuchsia.net.oldhttp",
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
    "//src/lib/fxl",
    "//zircon/public/lib/async-loop-cpp",
  ]
}

package("httpget_cpp") {
  meta = [
    {
      path = rebase_path("meta/httpget_cpp.cmx")
      dest = "httpget_cpp.cmx"
    },
  ]

  deps = [
    ":bin",
  ]

  binary = "httpget_cpp"
}
