import("//build/package.gni")

executable("bin") {
  output_name = "tz-util"

  sources = [
    "tz-util.cc",
  ]

  deps = [
    "//garnet/public/lib/fsl",
    "//sdk/fidl/fuchsia.timezone",
    "//sdk/lib/sys/cpp",
    "//src/lib/fxl",
    "//zircon/public/lib/async-loop-cpp",
  ]
}

package("tz-util") {
  deps = [
    ":bin",
  ]

  binaries = [
    {
      name = "tz-util"
      shell = true
    },
  ]
}
